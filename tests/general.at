m4_define([M_OPENDFS_PREPARE],
[
mkdir testdir
mkdir testdir/1
mkdir testdir/2
mkdir mountdir
mkdir mountdir/1
mkdir mountdir/2
mkdir database
])

m4_define([M_OPENDFS_MOUNT],
[
opendfs mountdir/1 -o port=5001,peername=localhost,peerport=5000,path=$(pwd)/testdir/1,database=database/opendfs1.db -f &
opendfs mountdir/2 -o port=5000,peername=localhost,peerport=5001,path=$(pwd)/testdir/2,database=database/opendfs2.db -f &
sleep 11
])

m4_define([M_OPENDFS_FINISH],
[
pkill opendfs
sleep 10
])

AT_SETUP([sinc: create file])
AT_KEYWORDS([sinc])

M_OPENDFS_PREPARE
M_OPENDFS_MOUNT

cp /etc/hosts mountdir/1
sleep 4

M_OPENDFS_FINISH

AT_CHECK([diff testdir/1/hosts testdir/2/hosts],0)
AT_CLEANUP


AT_SETUP([sinc: create directory])
AT_KEYWORDS([sinc])

M_OPENDFS_PREPARE
M_OPENDFS_MOUNT

mkdir mountdir/1/prueba
sleep 4

M_OPENDFS_FINISH

AT_CHECK([test -d testdir/2/prueba],0)
AT_CLEANUP

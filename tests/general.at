m4_define([M_OPENDFS_PREPARE],
[
echo $1
mkdir testdir
mkdir testdir/1
mkdir testdir/2
mkdir mountdir
mkdir mountdir/1
mkdir mountdir/2
mkdir database
])

m4_define([M_OPENDFS_MOUNT],
[
declare -i PUERTO1
declare -i PUERTO2
PUERTO1=($RANDOM*5000/32768)+5000
while [ "`netstat -an | grep $PUERTO1`" != "" ]; do
        PUERTO1=($RANDOM*5000/32768)+5000
done
PUERTO2=($RANDOM*5000/32768)+5000
while [ "`netstat -an | grep $PUERTO2`" != "" ]; do
        PUERTO2=($RANDOM*5000/32768)+5000
done
opendfs mountdir/1 -o port=$PUERTO2,peername=localhost,peerport=$PUERTO1,path=$(pwd)/testdir/1,database=database/opendfs1.db -f &
opendfs mountdir/2 -o port=$PUERTO1,peername=localhost,peerport=$PUERTO2,path=$(pwd)/testdir/2,database=database/opendfs2.db -f &
sleep 4
])


m4_define([M_OPENDFS_FINISH],
[
pkill opendfs
sleep 2
])

AT_SETUP([sinc: create file])
AT_KEYWORDS([sinc])

M_OPENDFS_PREPARE
M_OPENDFS_MOUNT

cp /etc/hosts mountdir/1
sleep 6

M_OPENDFS_FINISH

AT_CHECK([diff testdir/1/hosts testdir/2/hosts],0)
AT_CLEANUP

#######################################################333
AT_SETUP([sinc: create directory])
AT_KEYWORDS([sinc])
M_OPENDFS_PREPARE
M_OPENDFS_MOUNT

mkdir mountdir/1/prueba
sleep 6

M_OPENDFS_FINISH
AT_CHECK([test -d testdir/2/prueba],0)
AT_CLEANUP
##################################################33
AT_SETUP([sinc: modify file])
AT_KEYWORDS([sinc])
M_OPENDFS_PREPARE
cp /etc/hosts testdir/1
cp /etc/hosts testdir/2
M_OPENDFS_MOUNT

cat /etc/services >> mountdir/1/hosts
sleep 12

M_OPENDFS_FINISH
AT_CHECK([diff testdir/1/hosts testdir/2/hosts],0)
AT_CLEANUP
##################################################33

##################################################33
AT_SETUP([sinc: delete file])
AT_KEYWORDS([sinc])
M_OPENDFS_PREPARE
cp /etc/hosts testdir/1
cp /etc/hosts testdir/2
M_OPENDFS_MOUNT

rm mountdir/1/hosts
sleep 12

M_OPENDFS_FINISH
AT_CHECK([test -e  testdir/2/hosts],1)
AT_CHECK([test -e  testdir/2/.conflicts/*hosts*], 0)
AT_CLEANUP
##################################################33


##################################################33
AT_SETUP([sinc: modify with conflict])
AT_KEYWORDS([sinc])
M_OPENDFS_PREPARE
cp /etc/hosts testdir/1
cp /etc/hosts testdir/2

declare -i PUERTO1
declare -i PUERTO2
PUERTO1=($RANDOM*5000/32768)+5000
PUERTO2=PUERTO1+1

## Mount first folder
opendfs mountdir/1 -o port=$PUERTO2,peername=localhost,peerport=$PUERTO1,path=$(pwd)/testdir/1,database=database/opendfs1.db -f &
sleep 6
echo "ONE" >> mountdir/1/hosts
cp mountdir/1/hosts testdir/hosts.1
M_OPENDFS_FINISH

## Mount second folder
opendfs mountdir/2 -o port=$PUERTO1,peername=localhost,peerport=$PUERTO2,path=$(pwd)/testdir/2,database=database/opendfs2.db -f &
sleep 6
echo "TWO" >> mountdir/2/hosts
cp mountdir/2/hosts testdir/hosts.2
M_OPENDFS_FINISH


## mount all
M_OPENDFS_MOUNT
sleep 12
M_OPENDFS_FINISH

AT_CHECK([diff testdir/hosts.2 testdir/1/hosts],0)
AT_CHECK([diff testdir/hosts.2 testdir/2/hosts],0)
AT_CHECK([diff testdir/hosts.1 testdir/1/.conflicts/*hosts*],0)
AT_CLEANUP
##################################################33
